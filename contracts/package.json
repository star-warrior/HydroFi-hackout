{
  "name": "hydrofi-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for HydroFi Green Hydrogen Credit System",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy-free": "npx hardhat run scripts/deploy-free.js",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "node": "npx hardhat node",
    "accounts": "npx hardhat run scripts/list-accounts.js --network localhost",
    "balance": "npx hardhat run scripts/check-balance.js",
    "deploy-mumbai": "npx hardhat run scripts/deploy-free.js --network mumbai",
    "deploy-sepolia": "npx hardhat run scripts/deploy-free.js --network sepolia",
    "deploy-bsc": "npx hardhat run scripts/deploy-free.js --network bscTestnet",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.6.1"
  }
}
